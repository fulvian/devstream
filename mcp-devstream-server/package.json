{
  "name": "@devstream/mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for DevStream task management and memory system integration with Claude Code",
  "main": "dist/index.js",
  "bin": {
    "devstream-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node --max-old-space-size=8192 --expose-gc dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "devstream",
    "claude-code",
    "task-management",
    "model-context-protocol"
  ],
  "author": "DevStream Project",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^12.4.1",
    "ollama": "^0.5.9",
    "prom-client": "^15.1.3",
    "sqlite-vec": "^0.1.6",
    "sqlite3": "^5.1.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/sqlite3": "^3.1.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devstream/mcp-devstream-server"
  },
  "publishConfig": {
    "access": "public"
  }
}
